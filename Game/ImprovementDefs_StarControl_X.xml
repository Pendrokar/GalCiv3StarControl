<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<DefaultImprovementList
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="../Schema/ImprovementDefs.xsd">
<!-- ImprovementDefs.xml -->

<!-- Quasi Space related: -->
<!-- Begin Improvement -->
 
  <Improvement>
    <InternalName>QuasiSpaceCivilizationCapital</InternalName>
    <DisplayName>CivilizationCapital_Name</DisplayName>
    <ShortDescription>CivilizationCapital_ShortDec</ShortDescription>
    <Description>CivilizationCapital_Dec</Description>
    <Icon>QuasiSpaceCivilizationCapital.png</Icon>
    <BuildIcon>CivilizationCapital_Build.png</BuildIcon>
    <ListIcon>QuasiSpaceCivilizationCapital_Icon.png</ListIcon>
    <ImprovementType>Special</ImprovementType>
    <PlacementType>Special</PlacementType>
    <IsIndestructible>true</IsIndestructible>
    <IsColonyUnique>true</IsColonyUnique>
 
    <!-- Stats -->
 
    <Stats>
      <EffectType>Maintenance</EffectType>
      <Target>
        <TargetType>Improvement</TargetType>
      </Target>
      <BonusType>Flat</BonusType>
      <Value>10</Value>
    </Stats>
 
    <Stats>
      <EffectType>ProductionPoints</EffectType>
      <Target>
        <TargetType>Colony</TargetType>
      </Target>
      <BonusType>Flat</BonusType>
      <Value>5</Value>
    </Stats>
 
    <Stats>
      <EffectType>GoodsAndServices</EffectType>
      <Target>
        <TargetType>Colony</TargetType>
      </Target>
      <BonusType>Flat</BonusType>
      <Value>5</Value>
    </Stats>
 
    <Stats>
      <EffectType>Food</EffectType>
      <Target>
        <TargetType>Colony</TargetType>
      </Target>
      <BonusType>Flat</BonusType>
      <Value>8</Value>
    </Stats>
 
    
 
    <!-- Wrapped in QuasiSpace effects: -->
    <!-- Colony -->
 
    <Stats>
      <EffectType>InfluencePerTurn</EffectType>
      <Target>
        <TargetType>Colony</TargetType>
      </Target>
      <BonusType>Multiplier</BonusType>
      <Value>-100</Value>
    </Stats>

    <!-- Hard spot for Tourists to get -->
    <Stats>
      <EffectType>Tourism</EffectType>
      <Target>
        <TargetType>Colony</TargetType>
      </Target>
      <BonusType>Multiplier</BonusType>
      <Value>-0.85</Value>
    </Stats>

    <!-- No possible interaction with the outside -->
    <Stats>
      <EffectType>SensorRange</EffectType>
      <Target>
        <TargetType>Colony</TargetType>
      </Target>
      <BonusType>Flat</BonusType>
      <Value>3</Value>
    </Stats>

    <!-- QuasiSpace portals makes it harder to create ships -->
    <Stats>
      <EffectType>Military</EffectType>
      <Target>
        <TargetType>Colony</TargetType>
      </Target>
      <BonusType>Multiplier</BonusType>
      <Value>-0.1</Value>
    </Stats>

    <Stats>
      <EffectType>Research</EffectType>
      <Target>
        <TargetType>Colony</TargetType>
      </Target>
      <BonusType>Multiplier</BonusType>
      <Value>0.1</Value>
    </Stats>

    <!-- Faction wide -->

    <!-- QuasiSpace portals makes it harder to do trade -->
    <Stats>
      <EffectType>TradeRouteValueRaw</EffectType>
      <Target>
        <TargetType>Colony</TargetType>
      </Target>
      <BonusType>Multiplier</BonusType>
      <Value>-0.25</Value>
    </Stats>

    <Stats>
      <EffectType>Diplomacy</EffectType>
      <Target>
        <TargetType>Faction</TargetType>
      </Target>
      <BonusType>Flat</BonusType>
      <Value>1</Value>
    </Stats>

    <Stats>
      <EffectType>ImmuneToCultureFlip</EffectType>
      <Target>
        <!-- <TargetType>Colony</TargetType> -->
        <!-- Target type Colony does not work -->
        <TargetType>Faction</TargetType>
      </Target>
      <BonusType>Flat</BonusType>
      <Value>1</Value>
    </Stats>

    <!-- Immunity to any and all future invasions added by Stardock -->
    <Stats>
      <EffectType>IsImmuneToInvasion0</EffectType>
      <Target>
        <TargetType>Colony</TargetType>
      </Target>
      <BonusType>Flat</BonusType>
      <Value>1</Value>
    </Stats>
    <!-- Invasion 19 left for the Kohr-Ah's Merciless Warfare invasion -->


    <!-- Triggers -->
    <Triggers>
      <OnEvent>OnConstructImprovment</OnEvent>
      <Target>
        <TargetType>Faction</TargetType>
      </Target>
      <Lifetime>Instant</Lifetime>
      <PerformAction>
        <Action>DoActionPlayerCancelAllRebellion</Action>
      </PerformAction>
    </Triggers>
    <Triggers>
      <OnEvent>OnConstructImprovment</OnEvent>
      <Scope>Global</Scope>
      <Target>
        <!-- <TargetType>Colony</TargetType> -->
        <TargetType>Planet</TargetType>
        <TargetOrdinalConstraint>1</TargetOrdinalConstraint>
      </Target>
      <Lifetime>Instant</Lifetime>
      <PerformAction>
        <Action>Wormhole</Action>
      </PerformAction>
    </Triggers>
 
    <!-- Level Effect Trigers -->
 
    <!-- Level Effect Stats -->
 
    <!-- Adjacency Bonuses -->
 
    <NeighborBonuses>
      <GiveBonusToNeighborType>Research</GiveBonusToNeighborType>
      <NeighborBonusValue>1</NeighborBonusValue>
    </NeighborBonuses>
 
    <NeighborBonuses>
      <GiveBonusToNeighborType>Approval</GiveBonusToNeighborType>
      <NeighborBonusValue>1</NeighborBonusValue>
    </NeighborBonuses>
 
    <NeighborBonuses>
      <GiveBonusToNeighborType>Population</GiveBonusToNeighborType>
      <NeighborBonusValue>1</NeighborBonusValue>
    </NeighborBonuses>
 
    <NeighborBonuses>
      <GiveBonusToNeighborType>Manufacturing</GiveBonusToNeighborType>
      <NeighborBonusValue>1</NeighborBonusValue>
    </NeighborBonuses>
 
    <NeighborBonuses>
      <GiveBonusToNeighborType>Influence</GiveBonusToNeighborType>
      <NeighborBonusValue>1</NeighborBonusValue>
    </NeighborBonuses>
 
    <NeighborBonuses>
      <GiveBonusToNeighborType>Tourism</GiveBonusToNeighborType>
      <NeighborBonusValue>1</NeighborBonusValue>
    </NeighborBonuses>
 
    <NeighborBonuses>
      <GiveBonusToNeighborType>Wealth</GiveBonusToNeighborType>
      <NeighborBonusValue>1</NeighborBonusValue>
    </NeighborBonuses>
 
    <NeighborBonuses>
      <GiveBonusToNeighborType>Military</GiveBonusToNeighborType>
      <NeighborBonusValue>1</NeighborBonusValue>
    </NeighborBonuses>
 
    <!-- Prerequisites -->
 
    <Prerequ>
      <RaceTrait>
        <Option>TeleportationAbility</Option>
      </RaceTrait>
      <UpgradesFrom>CivilizationCapital</UpgradesFrom>
    </Prerequ>
 
  </Improvement>
<!-- End Improvement -->

<!-- Planet Teleportation Project that realigns QuasiSpace portal nodes: -->
<!-- Begin Improvement -->
  <Improvement>
    <InternalName>TeleportPlanet</InternalName>
    <DisplayName>TeleportPlanet_Name</DisplayName>
    <ShortDescription>TeleportPlanet_ShortDec</ShortDescription>
    <Description>TeleportPlanet_Dec</Description>
    <Icon>BiomassResequencer.png</Icon>
    <BuildIcon>BiomassResequencer_Build.png</BuildIcon>
    <ListIcon>BiomassResequencer_Icon.png</ListIcon>
    <ImprovementType>DurationalProject</ImprovementType>
    <PlacementType>Special</PlacementType>
    <UnderPopulationCapOnly>true</UnderPopulationCapOnly>
 
    <!-- Stats -->
 
    <Stats>
      <EffectType>ManufacturingCost</EffectType>
      <Scope>Queue</Scope>
      <Target>
        <TargetType>Improvement</TargetType>
      </Target>
      <BonusType>Flat</BonusType>
      <Value>1</Value>
      <!-- <Value>200</Value> -->
    </Stats>
 
    <!-- Triggers -->
    <Triggers>
      <OnEvent>OnConstructImprovment</OnEvent>
      <Scope>Global</Scope>
      <Target>
        <!-- <TargetType>Colony</TargetType> -->
        <TargetType>Planet</TargetType>
        <TargetOrdinalConstraint>1</TargetOrdinalConstraint>
      </Target>
      <Lifetime>Instant</Lifetime>
      <PerformAction>
        <Action>Wormhole</Action>
      </PerformAction>
    </Triggers>
 
    <!-- Level Effect Trigers -->
 
    <!-- Level Effect Stats -->
 
    <!-- Adjacency Bonuses -->
 
    <!-- Prerequisites -->
 
    <!-- Any conquerer of the planet can continue to do this project -->
    <Preclusions>
      <Improvement>CivilizationCapital</Improvement>
      <Improvement>ColonyCapital</Improvement>
      <Improvement>EnslavedCivilizationCapital</Improvement>
      <Improvement>FreeCivilizationCapital</Improvement>
      <Improvement>EnslavedColonyCapital</Improvement>
      <Improvement>SpathiCivilizationCapital</Improvement>
      <Improvement>FreeColonyCapital</Improvement>
    </Preclusions>
 
  </Improvement>
<!-- End Improvement -->

</DefaultImprovementList>
